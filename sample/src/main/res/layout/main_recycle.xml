<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <ImageView
            android:id="@+id/tvimageview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/music" app:layout_constraintHorizontal_bias="0.497"/>

    <TextView
            android:id="@+id/tvtextview"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:textColor="@color/colorPrimary"
            android:textSize="20dp"
            android:text="Muree,Lahore"
            app:layout_constraintEnd_toEndOf="@+id/tvimageview"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="@+id/tvimageview"
            app:layout_constraintTop_toBottomOf="@+id/tvimageview"/>

</androidx.constraintlayout.widget.ConstraintLayout>